package ao.apbot.drools.org

import java.util.Calendar;
import ao.apbot.codec.*;
import ao.apbot.pkg.*;
import ao.apbot.*;

import ao.apbot.drools.core.*;

global org.apache.mina.core.session.IoSession session;

dialect  "mvel"

rule "Help"

    when
        pkg : PrivateMessagePacket(command matches "help") || PrivateChannelMessagePacket(command matches "help") 
    then
    	session.write(pkg.getReply("Org commands: <font color=#FFFF00> mish level titlelevel ailevel oe calc </font>"));
end

rule "Level"

    when
        pkg : PrivateMessagePacket(command matches "level") || PrivateChannelMessagePacket(command matches "level")
    then
  		session.write(pkg.getReply(Level.get(pkg.getParam(1))));
end

rule "Mish"

    when
        pkg : PrivateMessagePacket(command matches "mish") || PrivateChannelMessagePacket(command matches "mish")
    then
  		session.write(pkg.getReply(Level.mish(pkg.getParam(1))));
end

rule "AiLevel"

    when
        pkg : PrivateMessagePacket(command matches "ailevel") || PrivateChannelMessagePacket(command matches "ailevel")
    then
  		session.write(pkg.getReply(Level.get(pkg.getParam(1))));
end

rule "TitleLevel"

    when
        pkg : PrivateMessagePacket(command matches "titlelevel") || PrivateChannelMessagePacket(command matches "titlelevel")
    then
  		session.write(pkg.getReply(Level.get(pkg.getParam(1))));
end

rule "OverEquip"

    when
        pkg : PrivateMessagePacket(command matches "oe") || PrivateChannelMessagePacket(command matches "oe")
    then
  		session.write(pkg.getReply(OverEquip.get(pkg.getParam(1))));
end

rule "Calc"

    when
        pkg : PrivateMessagePacket(command matches "calc") || PrivateChannelMessagePacket(command matches "calc")
    then
        session.write(pkg.getReply(Calc.get(pkg.getParam(1))));
end
